  gem 'pg'
end

group :test do
  gem 'database_cleaner'
  gem 'minitest'
  gem 'minitest-reporters'
  gem 'minitest_should'
  gem 'minitest-spec-rails'
  gem 'simplecov', :require => false
  gem 'webmock'
  gem 'mocha'
end

